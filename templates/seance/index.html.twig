{% extends 'base.html.twig' %}

{% block title %}Seance index
{% endblock %}

{% block body %}
	<h1>Seance index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Username</th>
				<th>Durée</th>
				<th>Intensité perçue</th>
				<th>Calories brulées</th>
				<th>Variation température corporelle</th>
				<th>Fatigue musculaire</th>
				<th>Vitesse de récupération cardiaque</th>
				<th>Variation cardiaque</th>
				<th>Date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for seance in seances %}
				<tr>
					<td>{{ seance.id }}</td>
					<td>{{ seance.user.username }}</td>
					<td>{{ seance.duration }}</td>
					<td>{{ seance.percievedIntensity }}</td>
					<td>{{ seance.burnedCalories }}</td>
					<td>{{ seance.bodyTemperatureDelta }}</td>
					<td>{{ seance.muscleFatigue }}</td>
					<td>{{ seance.heartRecoveryRate }}</td>
					<td>{{ seance.heartbeatVariation }}</td>
					<td>{{ seance.date ? seance.date|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_seance_show', {'id': seance.id}) }}">show</a>
						<a href="{{ path('app_seance_edit', {'id': seance.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_seance_new') }}">Create new</a>
{% endblock %}
